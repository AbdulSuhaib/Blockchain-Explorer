<!DOCTYPE html>
<html>
<head>
    @Html.Partial("HeadPartial")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            @Html.Partial("PartialLogoAndNavbarHeader")
            <div class="collapse navbar-collapse">
                @Html.Partial("PartialMenu")
            </div><!--/.nav-collapse -->

        </div>
    </div>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            @Html.Partial("PartialLogoAndNavbarHeader")
            <div class="collapse navbar-collapse">
                @Html.Partial("PartialMenu")
                <div class="pull-right search-header">
                    <form method="get" asp-controller="Block" asp-antiforgery="false" asp-action="Index" class="form-inline">
                        <div class="input-group search">
                            <input type="text" class="form-control input-sm" name="id">
                            <span class="input-group-btn">
                                <button class="btn btn-success input-sm" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                            </span>
                        </div>
                    </form>
                </div>
            </div><!--/.nav-collapse -->

        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>
    @Html.Partial("BottomPartial")

    @RenderSection("scripts", required: false)
</body>
</html>
