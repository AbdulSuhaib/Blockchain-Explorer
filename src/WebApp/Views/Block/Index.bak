@model BitcoinChainExplorerForAspNet5.Models.BlockModel

@{
    ViewData["Title"] = "Block - " + Model.Block.Hash;
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<div class="container">
    <header class="top-nav-links clearfix">
        <h1>Block</h1>
    </header>

    <div class="page-content">
        <div class="row">
            <div class="col-md-6">
                <table class="table table-rounded ">
                    <tbody>
                        <tr>
                            <td class="no-wrap">Hash</td>
                            <td class="expand-column">@Model.Block.Hash</td>
                        </tr>
                        <tr>
                            <td class="no-wrap">Date</td>
                            <td class="expand-column">@($"{Model.Block.Time:F}")</td>
                        </tr>
                        <tr>
                            <td class="no-wrap">Height</td>
                            <td class="expand-column">@Model.Block.Height</td>
                        </tr>
                        <tr>
                            <td class="no-wrap">Total transactions</td>
                            <td class="expand-column">@Model.Block.TotalTransactions</td>
                        </tr>
                        <tr>
                            <td class="no-wrap">Previous block</td>
                            <td class="expand-column"><a asp-controller="Block"  asp-route-id="@Model.Block.Previousblockhash" >@Model.Block.Previousblockhash</a></td>
                        </tr>
                        <tr>
                            <td class="no-wrap">Next block</td>
                            <td class="expand-column"><a asp-controller="Block"  asp-route-id="@Model.Block.Nextblockhash">@Model.Block.Nextblockhash</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-rounded ">
                    <tbody>
                        <tr>
                            <td class="no-wrap">Difficulty</td>
                            <td class="expand-column">@($"{Model.Block.Difficulty:N}")</td>
                        </tr>
                        <tr>
                            <td class="no-wrap">Merkle Root</td>
                            <td class="expand-column">@Model.Block.Merkleroot</td>
                        </tr>
                        <tr>
                            <td class="no-wrap">Nonce</td>
                            <td class="expand-column">@Model.Block.Nonce</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <hr>
        <h3 class="transactions-header">Transactions</h3>

        @foreach (var transaction in Model.Transactions)
        {
            <div class="panel panel-success transaction-details">
                <div class="panel-heading">
                    <h3 class="panel-title address-transaction-header"><a asp-controller="Transaction" asp-action="Index" asp-route-id="@transaction.Key">@transaction.Key</a></h3>
                </div>

                <ul class="list-group">

                    <li class="list-group-item clearfix">
                        <div class="confirmation-label">
                            <span class="label label-success">
                                @transaction.Value.Confirmations  confirmation
                            </span>

                        </div>

                        <div>@($"{transaction.Value.Time:F}")</div>

                    </li>

                    <li class="list-group-item clearfix section-header">
                        <h3 class="panel-title">Bitcoin</h3>
                    </li>

                    <li class="list-group-item clearfix intput-output-group-list-item">

                        <div class="intput-output-group">
                            <div class="icon">
                                <span class="currency-icon thumbnail">
                                    <span class="bg-warning">
                                        <i class="fa fa-btc"></i>
                                    </span>
                                </span>
                            </div>
                            <div class="inputs">
                                @foreach (var input in transaction.Value.Inputs)
                                {
                                    <div class="address-item ">
                                        <div class="amount">
                                            - @($"{Convert.ToDecimal(input.Value):G29}")
                                        </div>
                                        <div class="address">
                                            <i class="fa fa-lg fa-arrow-left"></i>
                                            @input.Addresses
                                        </div>
                                    </div>
                                }
                            </div>

                            <div class="outputs">
                                <div class="outputs-container">
                                    <div class="center-chevron">
                                        <i class="fa fa-chevron-right fa-lg"></i>
                                    </div>

                                    @foreach (var output in transaction.Value.Outputs)
                                    {
                                        <div class="address-item ">
                                            <div class="amount">
                                                @($"{Convert.ToDecimal(output.Value):G29}")
                                            </div>
                                            <div class="address">
                                                @output.Addresses
                                            </div>
                                        </div>
                                    }
                                    <div class="address-item ">
                                        <div class="amount">
                                            @($"{Convert.ToDecimal(transaction.Value.Fee):F8}")
                                        </div>
                                        <div class="address">
                                            Fees
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </li>


                </ul>

            </div>
        }
    </div>
    <div class="footer-push"></div>
</div>